@inherits LayoutComponentBase

<CascadingValue Value="this">
    <Layout>
        <Sider Class="theme-background sider" Collapsed="Collapsed" Collapsible NoTrigger>
            <VMenu />
        </Sider>
        <Layout Class="theme-background">
            <Header Class="theme-background header">
                <Icon Class="trigger" Type="@(Collapsed ? "menu-unfold" : "menu-fold")" OnClick="e => Collapsed = !Collapsed" />
            </Header>
            <Content>
                <VTab DataSource="Tabs" />
            </Content>
        </Layout>
    </Layout>
</CascadingValue>